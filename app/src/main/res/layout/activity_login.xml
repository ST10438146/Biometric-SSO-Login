<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secure App Access"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="64dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Login (First Time / Session Expired)"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btn_sso_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in with SSO Provider"
        android:layout_marginBottom="48dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quick Access"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btn_biometric_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use Biometric Login"
        android:drawableStart="@drawable/ic_fingerprint"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_biometric_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Biometrics Status: Checking..."
        android:textColor="@android:color/holo_blue_dark" />

</LinearLayout>